<h1 class="text-center">General Metadata Input</h1>
<br />
<div class="row">
	<div class="col-xs-10 col-xs-offset-1 text-center">
	  <ol class="progress-meter">
      <li class="progress-point done">Basic Data Input</li>
      <li class="progress-point todo">General Metadata Input</li>
      <li class="progress-point todo">Select Data to publish</li>
	    <li class="progress-point todo">Data Metadata input</li>
	  </ol>
	</div>
</div>
<br />
<div class="row">
	<div class='col-xs-8 col-xs-offset-2'>
		<%= form_with url: publish_metadata_path, local: true, method: :post do |form| %>
			<%= hidden_field_tag 'data_product_id', @data_product.id %>

			<div class='form-group'>
				<%= form.label :creators %> <br />
				<%= form.text_field :creators, value: @creators, class: 'form-control' %>
				<small class="form-text text-muted">The authors of the data, separated by semicolon.</small>
			</div>
			<div class='form-group'>
				<%= form.label :source %><br />
				<%= form.text_field :source, class: 'form-control' %>
				<small class="form-text text-muted">The paper associated whith the data, preferably in bibcode.</small>
			</div>
			<div class='form-group'>
				<%= form.label :subjects %><br />
				<%= form.select :subjects, options_for_select(@subjects.map { |s| [s.strip] }), {}, { multiple: true, class: "form-control selectpicker", "data-live-search" => "true" } %>
				<small class="form-text text-muted">The subjects to which the data belong.</small>
			</div>
			<div class='form-group'>
				<%= form.label :instrument %><br />
				<%= form.text_field :instrument, value: @instrument, class: 'form-control' %>
				<small class="form-text text-muted">The instrument that produced the data.</small>
			</div>
			<div class='form-group'>
				<%= form.label :facility %><br />
				<%= form.text_field :facility, value: @facility, class: 'form-control' %>
				<small class="form-text text-muted">The facility at which the data was taken.</small>
			</div>
			<div class='form-group'>
				<%= form.label :types %><br />
				<%= form.select :types, options_for_select(@types.map { |t| [t.strip] }), {}, { multiple: true, class: "form-control selectpicker", "data-live-search" => "true" } %>
				<small class="form-text text-muted">The type of the data.</small>
			</div>
			<div class='form-group'>
				<%= form.label :coverage_wavebands %><br />
				<%= form.select :coverage_wavebands, options_for_select(@coverage_wavebands.map { |cw| [cw.strip] }), {}, { multiple: true, class: "form-control selectpicker", "data-live-search" => "true" } %>
				<small class="form-text text-muted">The waveband to which the data belongs.</small>
			</div>
			<div class='actions'>
				<br /><%= form.submit "Next" %>
			</div>
		<% end %>
	</div>
</div>